{
  // we start with version 2

  "manifest_version": 2,

  "name": "Ad Value",
  "description": "Try to calculate value of blocked ads on page",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"] // this will run on click of the icon I think
  },

  // only content scripts have access to DOM
  "content_scripts": [
    {
      "matches": ["<all_urls>"], // on any site
      "js": ["content.js"] // do this stuff
    }
  ],

  //wat?
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "This Page Costs Mucho Dinero",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage",
    "tabs", // apparently different than "activeTab"
    "*://*.google.com/",
    "*://*.doubleclick.net/",
    "webNavigation"
  ]
}
